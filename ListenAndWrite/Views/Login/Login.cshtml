@model ListenAndWrite.Models.ModelView.AccountView
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login","Login"))
{
    <div class="container">
        
        <form>
            <div class="form-group">
                @Html.LabelFor(model=>model.account.Email)
                @Html.TextBoxFor(model=>model.account.Email,new {@class="form-control"  })
                
            </div>
            <div class="form-group">
                @Html.LabelFor(model=>model.account.Password)
                @Html.PasswordFor(model=>model.account.Password,new { @class="form-control"})
                
                
            </div>
            
            
            <div class="checkbox">
                @Html.LabelFor(model=>model.Remember)
                @Html.CheckBoxFor(model=>model.Remember)
                
            </div>
            
            
            <button type="submit" class="btn btn-default">Submit</button>
            @Html.ActionLink("SignUp", "SignUp", "SignUp")
        </form>
    </div>

}

